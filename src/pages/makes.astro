---
import { getCollection } from "astro:content";

import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";

const allMasters = await getCollection("masters", ({ data }) => !data.misc?.hidden);
const uniqueSchools = [...new Set(allMasters.map((master) => master.data.general.make))];
uniqueSchools.sort((a, b) => a.localeCompare(b));

const groupedSchools: Record<string, string[]> = uniqueSchools.reduce(
	(acc, make) => {
		const firstLetter = make[0].toUpperCase();
		if (!acc[firstLetter]) {
			acc[firstLetter] = [];
		}
		acc[firstLetter].push(make);
		return acc;
	},
	{} as Record<string, string[]>
);
---

<Layout pageTitle="Schools">
	<Section class:list={"bg-white"}>
		<Container class:list={"max-w-3xl"}>
			<Heading>
				<h1 slot="heading-title">Schools</h1>

				<p class="-mb-16" slot="heading-content">
					...
				</p>
			</Heading>
		</Container>
	</Section>

	<Section class:list={"bg-gray-50"}>
		<Container class:list={"max-w-3xl"}>
			{
				Object.keys(groupedSchools).length > 0 ? (
					<ul class="grid grid-cols-1 p-4 lg:p-8 rounded-lg shadow-md border border-gray-100 gap-4 lg:grid-cols-3 bg-white">
						{Object.keys(groupedSchools)
							.sort()
							.map((letter) => (
								<li>
									<h2 class="text-xl font-bold mt-4">{letter}</h2>
									<ul>
										{groupedSchools[letter].map((make) => (
											<li>
												<a href={`/masters/?make=${encodeURIComponent(make)}`}>{make}</a>
											</li>
										))}
									</ul>
								</li>
							))}
					</ul>
				) : (
					<p>No makes available at the moment. Please check back later.</p>
				)
			}
		</Container>
	</Section>
</Layout>
